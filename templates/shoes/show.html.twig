{% extends 'base.html.twig' %}

{% block title %}Chaussures{% endblock %}

{% block body %}
    <h1>Chaussures</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shoe.id }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ shoe.gender }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ shoe.stock }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ shoe.price }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ shoe.size }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ shoe.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ shoe.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ shoe.date ? shoe.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ shoe.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_shoes_index') }}">back to list</a>

    <a href="{{ path('app_shoes_edit', {'id': shoe.id}) }}">edit</a>

    {{ include('shoes/_delete_form.html.twig') }}
{% endblock %}
