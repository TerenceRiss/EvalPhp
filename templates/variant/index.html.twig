{% extends 'base.html.twig' %}

{% block title %}Variant index{% endblock %}

{% block body %}
    <h1>Variant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Size</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for variant in variants %}
            <tr>
                <td>{{ variant.id }}</td>
                <td>{{ variant.size }}</td>
                <td>{{ variant.stock }}</td>
                <td>
                    <a href="{{ path('app_variant_show', {'id': variant.id}) }}">show</a>
                    <a href="{{ path('app_variant_edit', {'id': variant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_variant_new') }}">Create new</a>
{% endblock %}
